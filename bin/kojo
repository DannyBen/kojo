#!/usr/bin/env ruby
require 'kojo'
require 'mister_bin'
require 'kojo/version'

runner = MisterBin::Runner.new 'kojo', basedir: __dir__,
  header: "Kojo #{Kojo::VERSION}"

begin
  exit runner.run ARGV
rescue => e
  puts e.backtrace.reverse if ENV['DEBUG']
  say! "!txtred!#{e.class}: #{e.message}"
  exit 1
end